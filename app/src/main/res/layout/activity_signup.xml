<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/titleBlue">

        <TextView
            android:id="@+id/signup_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/fastSignup"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/back_to_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/no_bottom_stroke">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/username" />

            <EditText
                android:id="@+id/phonenumber"
                style="@style/font_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:background="@null"
                android:hint="@string/inputPhonenum"
                android:inputType="phone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/no_bottom_stroke">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/password" />

            <EditText
                android:id="@+id/password_signup_text"
                style="@style/font_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/imageView3"
                android:layout_toRightOf="@+id/imageView3"
                android:background="@null"
                android:hint="@string/inputPassword"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/clear1"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="99dp"
                android:layout_marginRight="99dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/clearpwd" />

            <RelativeLayout
                android:layout_width="84dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/left_stroke">

                <TextView
                    android:id="@+id/eye1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="显示密码"
                    android:textColor="@color/textBlue"
                    android:textSize="14sp" />
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/both_stroke">

            <EditText
                android:id="@+id/repassword_signup_text"
                style="@style/font_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_toEndOf="@+id/imageView5"
                android:layout_toRightOf="@+id/imageView5"
                android:background="@null"
                android:hint="@string/inputPasswordAgain"
                android:inputType="textPassword" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="14dp"
                android:layout_height="18dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/password" />

            <RelativeLayout
                android:layout_width="84dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/left_stroke">

                <TextView
                    android:id="@+id/eye2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="显示密码"
                    android:textColor="@color/textBlue"
                    android:textSize="14sp" />
            </RelativeLayout>


            <ImageView
                android:id="@+id/clear2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="99dp"
                android:layout_marginRight="99dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/clearpwd" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp">

            <Button
                android:id="@+id/get_fetch_code"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:background="@drawable/corners_grey_btn"
                android:text="@string/getVerification"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/get_fetch_code"
                android:background="@drawable/both_stroke">

                <ImageView
                    android:id="@+id/message_img"
                    android:layout_width="18dp"
                    android:layout_height="13dp"
                    android:layout_marginBottom="17.5dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="17.5dp"
                    android:src="@drawable/message" />

                <EditText
                    android:id="@+id/message_text"
                    style="@style/font_grey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="14dp"
                    android:layout_toEndOf="@+id/message_img"
                    android:layout_toRightOf="@+id/message_img"
                    android:background="@null"
                    android:hint="@string/verification" />
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/corners_grey_btn"
            android:text="@string/signup"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>