<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reset_password_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/titleBlue">

        <TextView
            android:id="@+id/reset_boat_pwd_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改绑定密码"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/back_to_boat_config_btn"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">

        <TextView
            style="@style/font_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="15dp"
            android:text="注意事项：" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/blue_point_10px" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="101dp"
            android:background="@drawable/blue_point_10px" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="146dp"
            android:background="@drawable/blue_point_10px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36.5dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="50dp"
            android:text="新密码已短信的形式发送至购买船舶监控设备时登记的手机号码。"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36.5dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="95dp"
            android:text="修改绑定密码后，再次绑定船舶时需要使用新密码。"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36.5dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="140dp"
            android:text="已经绑定船舶的账号不需要重新绑定。"
            android:textColor="#333333"
            android:textSize="14sp" />
    </RelativeLayout>

    <Button
        android:id="@+id/get_new_boat_pwd_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="97dp"
        android:background="@drawable/corners_blue_btn"
        android:text="点击发送新密码至手机"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:gravity="center"
        android:text="（每天仅限一次）"
        android:textAlignment="center"
        android:textColor="#666666"
        android:textSize="14sp" />
</LinearLayout>