<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:clickable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/reset_password_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="27dp"
        android:text="重置密码后，需重新登录！"
        android:textColor="#666666"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/both_stroke_white">

        <EditText
            android:id="@+id/reset_password_text"
            style="@style/font_grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:background="@null"
            android:hint="@string/setNewPassword"
            android:inputType="textPassword"
            android:textColorHint="@color/textGrey" />

        <RelativeLayout
            android:layout_width="84dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/left_stroke">

            <TextView
                android:id="@+id/eye5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="显示密码"
                android:textColor="@color/textBlue"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/save_new_password_btn_logined"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/corners_grey_btn"
        android:text="@string/savenewpwd"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>